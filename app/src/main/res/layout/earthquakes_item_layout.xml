<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/earthquake_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/earthquake_latitude_text_view"
            android:layout_marginLeft="15dp"
            android:text="1" />

        <TextView
            android:id="@+id/earthquake_latitude_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/earthquake_description_text_view"
            android:text="2" />

        <TextView
            android:id="@+id/earthquake_longtitude_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/earthquake_latitude_text_view"
            android:text="3" />
    </RelativeLayout>
</LinearLayout>
